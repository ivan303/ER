.row
  .col-lg-10.col-lg-offset-1
    %table.table.table-condensed.clinics-table
      %tr
        %th= 'Clinic'
        %th= 'Details' 
      -@clinics.each do |clinic|
        %tr
          %td= clinic.name
          %td= link_to "Delete", clinic_path(clinic[:id]), method: :delete, data: { confirm: I18n.t('confirmation.clinic') }, class: 'btn btn-primary'
.row
  .col-lg-3.col-lg-offset-1
    .new-clinic
      = simple_form_for @new_clinic do |f|
        .inputs
          = f.input :name
        .actions
          = f.button :submit